<h1>Cat Rental Request</h1>

<form action="<%= cat_rental_requests_url %>" method="post">

  <label for="cat_id">Cat</label>
  <select id="cat_id" name="cat_rental_request[cat_id]">
    <option disabled selected>--Choose Cat--</option>
    <% @cats.each do |cat| %>
      <option value=<% cat.id %>> <%= cat.name %> </option>
    <% end %>
  </select>

  <label for="start_date">Start Date</label>
  <input type="date" id="start_date" name="cat_rental_request[start_date]">

  <label for="end_date">End Date</label>
  <input type="date" id="end_date" name="cat_rental_requests[end_date]">

  <input type="submit" value="Submit">
</form>
